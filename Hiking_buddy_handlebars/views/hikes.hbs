{{!-- Create a table --}}
<table id = "hikes-table">

    {{!-- Header section --}}
    <thead>

        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{#each data}}
        <tr>
            <td>{{this.ID}}</td>
            <td>{{this.FirstName}}</td>
            <td>{{this.LastName}}</td>
            <td>{{this.Trail}}</td>
            <td>{{this.PackingList}}</td>
            <td>{{this.Date}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
