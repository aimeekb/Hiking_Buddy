{{!-- Create a table --}}
<table class="users" id = "users-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, etc. --}}
        {{#each data}}
        <tr>
            <td>{{this.ID}}</td>
            <td>{{this.First}}</td>
            <td>{{this.Last}}</td>
            <td>{{this.email}}</td>
            <td>{{this.City}}</td>
            <td>{{this.TotalMiles}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<h2>Add User</h2>
<form class="users" id="add-user-form" method="POST" action="/add-user-form">
    <label for="input-first_name">First Name: </label>
    <input type="text" name="input-first_name" id="input-first_name">
    
    <label for="input-last_name">Last Name: </label>
    <input type="text" name="input-last_name" id="input-last_name">

    <label for="input-email">email: </label>
    <input type="text" name="input-email" id="input-email">

    <label for="input-user_location">City: </label>
    <input type="text" name="input-user_location" id="input-user_location">

    <input type="submit">
</form>



<h2>Delete User</h2>
<form class="users" id="delete-user-form" method="POST" action="/delete-user-form">

 <select name="input-id_user" id="input-id_user">
        <option value="">Select a User ID</option>
        {{#each data}}
        <option value="{{this.ID}}">{{this.ID}}</option>
        {{/each}}
  </select>

    <input type="submit">
</form>
</body>
